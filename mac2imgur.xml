  </target>
  
  <target name="clean" depends="clean.module.mac2imgur" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mac2imgur" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
